<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

	<security-constraint>
		<web-resource-collection>
			<web-resource-name>icon.png</web-resource-name>
			<url-pattern>/public/icon.png</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>all XML</web-resource-name>
			<url-pattern>*.xml</url-pattern>
		</web-resource-collection>
		<web-resource-collection>
			<web-resource-name>restricted folder</web-resource-name>
			<url-pattern>/public/restricted/*</url-pattern>
		</web-resource-collection>
		<auth-constraint/>
	</security-constraint>
</web-app>